        		<div data-snippet-option-id="my_theme_snippet_option" data-selector=".mt_simple_snippet" data-selector-children=".oe_structure">
        			<li class="dropdown-submenu">
        				<a tabindex="-1" href="#">Pattern</a>
        				<ul class='dropdown-menu'>
        					<li data-value='tweed'><a>Tweed</a></li>
        					<li data-value='sprinkles'><a>Sprinkles</a></li>
